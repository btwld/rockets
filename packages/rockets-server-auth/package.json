  "devDependencies": {
    "@concepta/nestjs-typeorm-ext": "^7.0.0-alpha.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/testing": "^10.4.1",
    "@nestjs/typeorm": "^10.0.2",
