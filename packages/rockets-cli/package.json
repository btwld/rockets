{
  "name": "@bitwild/rockets-cli",
  "version": "0.0.0",
  "description": "CLI tool to generate Rockets SDK module patterns",
  "private": true,
  "bin": {
    "rockets": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "start": "node dist/cli.js",
    "sample:book": "node dist/cli.js generate:module -n Book -f \"title:string!,subtitle:string?,category:string!\" -o samples/src/modules",
    "samples:clean": "rimraf samples",
    "mcp:start": "node dist/mcp/server.js",
    "mcp:dev": "tsx src/mcp/server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^11.1.0",
    "constant-case": "^3.0.4",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "typescript": "^4.9.5"
  }
}
