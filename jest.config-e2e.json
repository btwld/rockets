{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.jest.json"
    }
  },
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}